<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenu">

    <fragment
        android:id="@+id/mainMenu"
        android:name="com.justdeax.tetramine.fragment.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >

        <action
            android:id="@+id/action_mainMenu_to_chooseGame"
            app:destination="@id/chooseMode" />
        <action
            android:id="@+id/action_mainMenu_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_mainMenu_to_aboutGame"
            app:destination="@id/aboutGame" />
        <action
            android:id="@+id/action_mainMenu_to_statistics"
            app:destination="@id/statistics" />

    </fragment>

    <fragment
        android:id="@+id/chooseMode"
        android:name="com.justdeax.tetramine.fragment.ChooseMode"
        android:label="fragment_choose_mode"
        tools:layout="@layout/fragment_choose_mode" />

    <fragment
        android:id="@+id/settings"
        android:name="com.justdeax.tetramine.fragment.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/aboutGame"
        android:name="com.justdeax.tetramine.fragment.AboutGame"
        android:label="fragment_about_game"
        tools:layout="@layout/fragment_about_game" />

    <fragment
        android:id="@+id/statistics"
        android:name="com.justdeax.tetramine.fragment.Statistics"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />

</navigation>