<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenu">

    <fragment
        android:id="@+id/mainMenu"
        android:name="com.justdeax.tetramine.fragment.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenu_to_levels"
            app:destination="@id/levels" />
        <action
            android:id="@+id/action_mainMenu_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_mainMenu_to_aboutGame"
            app:destination="@id/aboutGame" />
        <action
            android:id="@+id/action_mainMenu_to_statistics"
            app:destination="@id/statistics" />
    </fragment>

    <fragment
        android:id="@+id/levels"
        android:name="com.justdeax.tetramine.fragment.Levels"
        android:label="fragment_levels"
        tools:layout="@layout/fragment_levels" />

    <fragment
        android:id="@+id/settings"
        android:name="com.justdeax.tetramine.fragment.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_main_menu" />

    <fragment
        android:id="@+id/aboutGame"
        android:name="com.justdeax.tetramine.fragment.AboutGame"
        android:label="fragment_about_game"
        tools:layout="@layout/fragment_about_game" />

    <fragment
        android:id="@+id/statistics"
        android:name="com.justdeax.tetramine.fragment.Statistics"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />

</navigation>